<nav class="navbar navbar-expand-lg navbar-light">
  <div class="container">
    <a class="navbar-brand" href="/"> <%= image_tag("stockscrowd_logo_2.png", class: "logo") %> </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="nav-menu">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse" id="nav-menu">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link" href="/stocks">Market</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/portfolios">My Portfolio</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-bs-toggle="offcanvas"  data-bs-target="#sidebar" role="button" aria-controls="offcanvasExample">
            My Wallet
          </a>
        </li>
        <% if current_user %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Account
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li><a class="dropdown-item" href="#">My Account</a></li>
              <li><%= link_to 'Logout', destroy_user_session_path, method: :delete , class: "dropdown-item" %></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="#">Upgrade to Premium</a></li>
            </ul>
          </li>
        <% end %>
        <li class="nav-item">
          <% unless current_user %>
            <%= link_to 'Signup', new_user_registration_path, class: 'nav-link active', aria_current: "page" %>
          <% end %>
        </li>
        <li class="nav-item">
          <% if current_user %>
            <li><%= link_to 'Logout', destroy_user_session_path, method: :delete , class: 'nav-link active' %></li>
          <% else %>
            <%= link_to 'Login', new_user_session_path, class: 'nav-link active', aria_current: "page" %>
          <% end %>
        </li>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="offcanvas offcanvas-start" tabindex="-1" id="sidebar" aria-labelledby="offcanvasExampleLabel">
  <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  
  <div class="offcanvas-header">
    <div class="offcanvas-title" id="offcanvasExampleLabel">
      <a class="navbar-brand" href="/"> <%= image_tag("stockscrowd_logo_2.png", class: "wallet-logo") %> </a>
    </div>
  </div>
  <div class="offcanvas-body">
    <h5 class="my-wallet"> My Wallet </h5>

    <h5 class="total-bal"> Total balance </h5>
    <div class="total-bal-container">
      <h3 class="bal-amount"> $<%= Wallet.where(:user_id == 1)[0].balance %> <h3>
      <hr>
    </div>

    <h5 class="latest-transactions"> Latest Transactions </h5>

    <div class="transactions-container">
      <% Payment.where(:user_id == current_user).each do |transaction|%>
        <div class="transaction-item">
          <span><%= Stock.find(transaction.stock_id).symbol %> </span>
          <span>$<%= (transaction.quantity * transaction.current_price) %> </span>
          <span><%= transaction.transaction_type %> </span>
        </div>
      <% end %>
      <div>
        <%= link_to "See all transactions", payments_path, method: :get %>
      </div>
    </div>

  </div>

</div>
